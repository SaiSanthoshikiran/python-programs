def main():
    n=int(input())
    l=[]
    for i in range(n):
        b=(input('b'))
    
        m=list(b.split())
        l.append(m)
    
    for i in range(len(l)):
        p=(l[i])
        a=0
        for j in range(int(p[2])-1):
            a=a+int(p[1])
        f=int(p[0])+a
        print(f)
main()

